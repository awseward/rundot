<h2>Listing runs</h2>

<table class="table">
  <thead>
    <tr>
      <th>Start time</th>
      <th>End time</th>
      <th>Distance</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for run <- @runs do %>
    <tr>
      <td><%= run.start_time %></td>
      <td><%= run.end_time %></td>
      <td><%= "#{run.distance} #{run.distance_unit}" %></td>

      <td class="text-right">
        <%= link "Show", to: run_path(@conn, :show, run), class: "btn btn-default btn-xs" %>
        <%= link "Edit", to: run_path(@conn, :edit, run), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: run_path(@conn, :delete, run), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New run", to: run_path(@conn, :new) %>
